<div class="flex flex-wrap w-full mb-20 flex-col items-center text-center">
  <h1 class="text-5xl"><%= @quiz.title %></h1>
  <h1 class="sm:text-3xl text-2xl font-medium title-font text-gray-800 py-12">結果</h1>
  <% selected_choice = @quiz.choices.find_by(id: params[:choice_id]) %>
  <% if selected_choice && selected_choice.is_correct %>
    <p class="answer text-9xl text-red-500">正解!</p>
  <% else %>
    <p class="answer text-9xl text-blue-500">残念!</p>
  <% end %>
  <p class="py-4">正解は…</p>
  <% @quiz.choices.each_with_index do |choice, index| %>
    <div class="outline my-3 w-96">
      <% if choice.is_correct == true %>
        <p class="answer text-2xl text-red-500">正解!</p>
      <% end %>
      <h1 class="text-5xl"><%= index + 1 %></h1>
      <p class="font-bold">内容</p>
      <div class="code">
        <%= CodeRay.scan(choice.content.body.to_plain_text, :ruby).div.html_safe %>
      </div>

      <p class="font-bold">画像</p>
      <%= choice.choice_image %>

      <p class="font-bold">正解か</p>
      <%= choice.is_correct %>

      <p class="font-bold">説明</p>
      <div class="code">
        <%= CodeRay.scan(choice.explanation.body.to_plain_text, :ruby).div.html_safe %>
      </div>

      <p class="font-bold">説明の画像</p>
      <%= choice.explanation_image %>
    </div>
  <% end %>

  <p class="font-bold">-解説-</p>
 <div class="code">
    <%= CodeRay.scan(@quiz.content.body.to_plain_text, :ruby).div.html_safe %>
  </div>

  <%= link_to t("quizzes.actions.back"), quizzes_path,  class:"text-center py-2 px-8 mt-6 w-4/5 sm:w-1/4 rounded bg-indigo-200 border border-indigo-400 hover:bg-indigo-100" %>
  <%= link_to '間違い報告', "#" ,class:"text-center py-2 px-8 mt-6 w-4/5 sm:w-1/4 rounded bg-indigo-200 border border-indigo-400 hover:bg-indigo-100" %>
</div>
