<div class="bg-white dark:bg-slate-800 px-6 py-3 dark:bg-gray-800 dark:text-white">

  <div class="flex flex-wrap w-full mb-20 flex-col items-center text-center">
    <h5 class="text-1xl"><%= @quiz.title %></h5>
    <% html_content = @quiz.content.body.to_s %>
    <% doc = Nokogiri::HTML::DocumentFragment.parse(html_content) %>
    <%= doc.text.strip %>
    <% @quiz.content.body.attachables.grep(ActiveStorage::Blob).each do |attachable| %>
      <%= image_tag attachable, size:"300x200" , class: "max-w-4xl mx-auto rounded-md" %>
    <% end %>
    <% html_content = @quiz.explanation.body.to_s %>
    <% doc = Nokogiri::HTML::DocumentFragment.parse(html_content) %>
    <%= doc.text.strip %>
    <% @quiz.explanation.body.attachables.grep(ActiveStorage::Blob).each do |attachable| %>
      <%= image_tag attachable, size:"300x200" , class: "max-w-4xl mx-auto rounded-md" %>
    <% end %>

    <h1 class="sm:text-3xl text-2xl font-medium title-font py-12">結果</h1>
    <% selected_choice = @quiz.choices.find_by(id: params[:choice_id]) %>
    <% if selected_choice && selected_choice.is_correct %>
      <p class="answer text-9xl text-red-500">正解!</p>
      <% @answer = "正解!" %>
    <% else %>
      <p class="answer text-9xl text-blue-500">残念!</p>
      <% @answer = "不正解" %>
    <% end %>

    <br>
    <div class="flex flex-wrap -m-4 text-gray-800">
      <% @quiz.choices.each_with_index do |choice, index| %>
        <div class="w-full md:w-1/2 px-4 rounded-xl bg-green-200 border border-green-400">
          <% if choice.is_correct == true %>
            <p class="answer text-2xl text-red-500">正解!</p>
          <% end %>
          <p><%= index + 1 %></p>
          <p class="font-bold">選択肢</p>
          <% html_content = choice.content.body.to_s %>
          <% doc = Nokogiri::HTML::DocumentFragment.parse(html_content) %>
          <%= doc.text.strip %>
          <% choice.content.body.attachables.grep(ActiveStorage::Blob).each do |attachable| %>
            <%= image_tag attachable, size:"300x200" , class: "mx-auto rounded-md" %>
          <% end %>

          <p class="font-bold">解説</p>
          <% html_content = choice.explanation.body.to_s %>
          <% doc = Nokogiri::HTML::DocumentFragment.parse(html_content) %>
          <%= doc.text.strip %>
          <% choice.explanation.body.attachables.grep(ActiveStorage::Blob).each do |attachable| %>
            <%= image_tag attachable, size:"300x200" , class: "mx-auto rounded-md" %>
          <% end %>
        </div>
      <% end %>
    </div>

    <br>
    <div class="title w-8 mt-3 mx-auto">
      <%= link_to "https://twitter.com/share?url=#{ request.url }&text=クイズ#{@quiz.title}に答えました%0a#{@answer}でした%0a", title: 'Twitter', class: 'fab fa-twitter', target: '_blank' do %>
        <svg viewBox="328 355 335 276" xmlns="http://www.w3.org/2000/svg">
          <path d="
            M 630, 425
            A 195, 195 0 0 1 331, 600
            A 142, 142 0 0 0 428, 570
            A  70,  70 0 0 1 370, 523
            A  70,  70 0 0 0 401, 521
            A  70,  70 0 0 1 344, 455
            A  70,  70 0 0 0 372, 460
            A  70,  70 0 0 1 354, 370
            A 195, 195 0 0 0 495, 442
            A  67,  67 0 0 1 611, 380
            A 117, 117 0 0 0 654, 363
            A  65,  65 0 0 1 623, 401
            A 117, 117 0 0 0 662, 390
            A  65,  65 0 0 1 630, 425
            Z"
            style="fill:#3BA9EE;"/>
        </svg>
      <% end %>
    </div>
    <%= link_to t("quizzes.actions.back"), quizzes_path,  class:"text-gray-800 text-center py-2 px-8 mt-6 w-4/5 sm:w-1/4 rounded bg-indigo-200 border border-indigo-400 hover:bg-indigo-100" %>
    <%# link_to '間違い報告', "#" ,class:"text-gray-800 text-center py-2 px-8 mt-6 w-4/5 sm:w-1/4 rounded bg-indigo-200 border border-indigo-400 hover:bg-indigo-100" %>
  </div>
</div>
