<h1>Show quiz</h1>

<p style="color: green"><%= notice %></p>


<section class="text-gray-600 body-font w-full text-center items-center mb-24 mt-12">
  <h1 class="sm:text-xl text-lg font-medium title-font mb-8 text-gray-800">クイズNo.<%= @quiz.id %></h1>
  <p class="text-gray-800 text-xl">クイズに答えてください</p>
  <div class="container px-0 md:px-5 py-4 mx-auto">
    <%= image_tag "ogp.png", class:"w-11/12 md:w-2/3 mx-auto border-2 border-gray-700 rounded shadow-xl" %>
  </div>
  <div class="flex flex-wrap lg:w-4/5 sm:mx-auto sm:mb-2 mx-auto">
    <div class="flex flex-wrap lg:w-4/5 sm:mx-auto sm:mb-2 mx-auto">
      <% @quiz.choices.each do |choice| %>
        <div class="py-2 px-4 md:px-8 w-1/2">
          <div class="rounded flex h-full items-center">
            <%= link_to explanation_path(@quiz, is_correct: choice.is_correct), method: :get,
            class:"h-full w-full p-4 text-center text-lg rounded-xl bg-green-200 border border-green-400 hover:bg-green-100" do %>
              <%= choice.content%>
              <%= image_tag "ogp.png", class:"w-1/2 mx-auto"%>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="flex flex-wrap lg:w-1/3 sm:mx-auto sm:mb-2 -mx-2">
    <a class="w-full text-center">作成者メニュー</a>
    <div class="py-2 px-2 w-1/2 text-center">
      <%= link_to t("quizzes.actions.back"), quizzes_path,  class:"text-center py-2 px-8 sm:w-1/2 w-full rounded bg-indigo-200 border border-indigo-400 hover:bg-indigo-100" %>
      <%= link_to t("quizzes.actions.edit"), edit_quiz_path(@quiz), class:"text-center py-2 px-8 sm:w-1/2 w-full rounded bg-indigo-200 border border-indigo-400 hover:bg-indigo-100" %>
    </div>
    <div class="py-2 px-2 w-1/2 text-center">
      <%= button_to t("quizzes.actions.destroy"), @quiz, method: :delete, data: { turbo_confirm: "本当に削除しますか？" } %>
    </div>
    <div class="py-2 px-2 w-1/2 text-center">
      <%= link_to "linkじゃないとdeleteできない", @quiz,  data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" }, class:"text-center py-2 px-8 sm:w-1/2 w-full rounded bg-orange-200 border border-orange-400 hover:bg-orange-100" %>
    </div>
  </div>
</section>
