<h1>Show quiz</h1>

<p style="color: green"><%= notice %></p>

<%= render @quiz %>

<div>
  <%= link_to t("quizzes.actions.edit"), edit_quiz_path(@quiz) %> |
  <%= link_to t("quizzes.actions.back"), quizzes_path %> |
  <%= link_to t("quizzes.actions.explanation"), explanation_path(@quiz) %> |
  <%= button_to t("quizzes.actions.destroy"), @quiz, method: :delete %>
</div>
