<script src="https://unpkg.com/@sjmc11/tourguidejs/dist/tour.js" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<link rel="stylesheet" href="https://unpkg.com/@sjmc11/tourguidejs/dist/css/tour.min.css">
<div data-tg-tour="こんにちは！"></div>
<p style="color: green"><%= notice %></p>
<div class="flex flex-wrap w-full mb-20 mt-12 flex-col items-center text-center">
  <h1 class="sm:text-3xl text-2xl font-medium title-font mb-8 text-gray-800">クイズ一覧</h1>
  <%= link_to t("quizzes.actions.new"), new_quiz_path ,class: "inline-flex items-center bg-blue-100 border py-1 px-3 focus:outline-none hover:bg-blue-50 rounded text-base mb-4" ,id:"three"%>
  <div class="container px-4 py-8 md:py-16 mx-auto">
    <div id="quizzes">
      <div class="flex flex-wrap -m-4" id="two">
        <% if @quizzes.present? %>
          <% @quizzes.each do |quiz|%>
            <div class="p-1 md:p-4 w-1/2 md:w-1/3">
              <%= link_to quiz_path(quiz.id) do %>
                <div class="border border-gray-400 border-opacity-60 rounded-lg overflow-hidden shadow-lg">
                  <%= image_tag "ogp.png", class: "h-48 md:h-64 w-full object-contain object-center", alt:"photo" %>
                  <p class="md:p-2 bg-slate-100"><%= quiz.title %><p>
                  <p><%= quiz.category%></p>
                  <p><%= quiz.level%></p>
                </div>
              <% end %>
            </div>
          <% end %>
        <% else %>
          <p>クイズはありません</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
