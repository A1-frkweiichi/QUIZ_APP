<div class="flex justify-center">
  <% if user_signed_in? && @user == current_user %>
    <h1 class="font-weight-normal mt-5 mb-5">マイページ</h1>
  <% else %>
    <h1 class="font-weight-normal mt-5 mb-5"><%= @user.name %>さんのページ</h1>
  <% end %>
</div>

<div class="flex justify-center">
  <div class="w-full md:w-1/2 lg:w-1/3">
    <div class="bg-white shadow-md rounded-lg p-4 mb-4">
      <p class="text-center text-lg font-semibold mb-2">
        <%= @user.name %>さんの投稿数：<%= @user.quizzes.count %>件
      </p>
    </div>
  </div>
</div>

<div class="flex justify-center">
  <% if user_signed_in? && @user == current_user %>
    <p class="mt-2">
      <%= link_to "プロフィール編集", edit_user_registration_path, class: "btn btn-primary" %>
    </p>
  <% end %>
</div>

<div class="flex justify-center">
  <% if @user.avatar.present? %>
    <%= image_tag @user.avatar.url, class: "mb-3 profile-img", width: 100, height: 100 %>
  <% else %>
    <%= image_tag @user.avatar.default_url, class: "mb-3 profile-img", width: 100, height: 100 %>
  <% end %>
</div>

<div class="flex justify-center">
  <!-- 他のコンテンツをここに記述 -->
</div>







