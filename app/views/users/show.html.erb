<div class="bg-white dark:bg-slate-800 px-6 py-3 dark:bg-gray-800 dark:text-white">
  <div class="flex justify-center text-5xl font-bold my-5">
    <% if user_signed_in? && @user == current_user %>
      <h1>マイページ</h1>
    <% else %>
      <h1><%= @user.name %>さんのページ</h1>
    <% end %>
  </div>
  <div class="flex justify-center">
    <% if @user.avatar.present? %>
      <%= image_tag @user.avatar.url, class: "mb-3 profile-img rounded-full", width: 100, height: 100 %>
    <% else %>
      <%= image_tag @user.avatar.default_url, class: "mb-3 profile-img rounded-full", width: 100, height: 100 %>
    <% end %>
  </div>
  <p class="text-center text-lg font-semibold mb-2">
    <%= @user.name %>さんの投稿数：<%= @user.quizzes.count %>件
  </p>
  <div class="flex justify-center">
    <% if user_signed_in? && @user == current_user %>
      <p class="mt-2">
        <%= link_to "プロフィール編集", edit_user_registration_path, class: "btn bg-gray-900 text-white" %>
      </p>
    <% end %>
    <% if current_user.provider %>
      <p class="mt-2"><%= link_to '退会', user_registration_path, data: { turbo_method: :delete, turbo_confirm: "アカウントを削除してもよろしいですか？" } ,class: "btn bg-red-500 text-white" %></p>
    <% end %>
  </div>

  <div class="flex justify-center">
    <div class="w-full md:w-1/2 lg:w-1/3">
      <div class="bg-white shadow-md rounded-lg p-4 mb-4">
        <% if @quizzes.present? %>
          <% @quizzes.each do |quiz|%>
            <div class="p-1">
              <%= link_to quiz_path(quiz.id) do %>
                <div class="border border-gray-400 border-opacity-60 rounded-lg overflow-hidden shadow-lg">
                  <%= image_tag "ogp.png", class: "h-48 md:h-64 w-full object-contain object-center", alt:"photo" %>
                  <p class="md:p-2 bg-slate-100"><%= quiz.title %><p>
                  <p><%= quiz.category%></p>
                  <p><%= quiz.level%></p>
                </div>
              <% end %>
            </div>
          <% end %>
        <% else %>
          <p class="text-center">投稿はありません</p>
        <% end %>
      </div>
    </div>
  </div>
</div>


