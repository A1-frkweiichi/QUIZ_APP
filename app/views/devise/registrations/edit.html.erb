<div class="body flex flex-col min-h-screen bg-white dark:bg-slate-800 py-3 dark:bg-gray-800 dark:text-white">

  <div class="h-96 flex justify-center items-center">
    <div class="text-center">
      <h2><%= t('.title', resource: resource_name.to_s.humanize) %></h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field mb-4">
          <%= f.label :name %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"dark:text-black" %>
        </div>

        <div class="field mb-4">
          <%= f.label :email %><br />
          <%= f.email_field :email, autocomplete: "email", class:"dark:text-black" %>
        </div>

        <div class="form-group mb-4">
          <%= f.label :avatar %>
          <%= f.file_field :avatar, class: 'avatar' %>
        </div>

        <div class="actions mt-4">
          <%= f.submit t('.update'), class: "btn btn-primary" %>
          <%= link_to t('devise.shared.links.back'), :back, class: "btn btn-secondary" %>
        </div>

      <% end %>
    </div>
  </div>
</div>
